# 视角知识库系统环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 数据库配置
# =============================================================================

# Milvus Lite 数据库路径（本地模式）
DB_PATH=milvus_lite.db

# =============================================================================
# Milvus服务器配置（服务器模式）
# =============================================================================

# 是否使用Milvus服务器模式（true=服务器模式，false=本地模式）
MILVUS_USE_SERVER=false

# Milvus服务器地址
MILVUS_HOST=localhost

# Milvus服务器端口
MILVUS_PORT=19530

# Milvus用户名（可选）
# MILVUS_USERNAME=root

# Milvus密码（可选）
# MILVUS_PASSWORD=Milvus

# =============================================================================
# Ollama配置
# =============================================================================

# Ollama服务地址
OLLAMA_HOST=http://localhost:11434

# 嵌入模型名称
EMBEDDING_MODEL=mitoza/Qwen3-Embedding-0.6B:latest

# =============================================================================
# 向量配置
# =============================================================================

# 向量维度
VECTOR_DIM=1024

# 是否使用FLAT索引（true=FLAT，false=IVF_FLAT）
USE_FLAT_INDEX=true

# 检索返回结果数量
TOP_K=5

# =============================================================================
# 数据路径配置
# =============================================================================

# 数据目录
DATA_DIR=data

# 标准视角数据目录
CANONICAL_PERSPECTIVES_DIR=data/canonical_perspectives

# 用户反馈数据目录
USER_FEEDBACKS_DIR=data/user_feedbacks

# 处理后数据目录
PROCESSED_DIR=data/processed

# =============================================================================
# 日志配置
# =============================================================================

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 日志文件路径（可选，留空则只输出到控制台）
# LOG_FILE=log/perspective_kb.log

# =============================================================================
# 性能配置
# =============================================================================

# 批处理大小
BATCH_SIZE=100

# 最大工作线程数
MAX_WORKERS=4
